<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="mx.com.devare.ninepatch.MainActivity">

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Sin 9-patch"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_chat"
            android:hint="Mensaje ..."
            android:inputType="textMultiLine"
            android:paddingStart="60dp"
            android:paddingEnd="20dp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="30dp"
            android:paddingTop="300dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textSize="12sp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/iv_portada"
            android:text="@string/info_tv_nine_patch"
            android:inputType="textMultiLine"
            android:textColor="@color/secondary_text" />

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Con 9-patch"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_chat_nine_patch"
            android:hint="Mensaje ..."
            android:inputType="textMultiLine"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/iv_portada_nine_patch"
            android:text="@string/info_tv_nine_patch"
            android:inputType="textMultiLine"
            android:textColor="@color/secondary_text" />
    </LinearLayout>
</ScrollView>
